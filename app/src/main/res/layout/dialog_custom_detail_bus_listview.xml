<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft=" 1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Thông tin phương tiện"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#F0356F1D"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Li1"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:text="Tên Phương Tiện:"
            android:textAlignment="textEnd"
            android:textColor="#E12C0404" />

        <TextView
            android:id="@+id/txtDetailNameBus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xe Tải Hoang Log"
            android:textColor="#E12C0404"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Li2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft=" 1dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Li1">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:text="Địa chỉ: "
            android:textAlignment="textEnd"
            android:textColor="#E12C0404" />

        <TextView
            android:id="@+id/txtLocationBusDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xe Tải Hoang Log"
            android:textColor="#E12C0404"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Li5"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft=" 1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Li2">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:text="Số điện thoại: "
            android:textAlignment="textEnd"
            android:textColor="#E12C0404" />

        <TextView
            android:id="@+id/txtSDTBusDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xe Tải Hoang Log"
            android:textColor="#E12C0404"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Li6"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft=" 1dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Li5">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:text="Điểm: "
            android:textAlignment="textEnd"
            android:textColor="#E12C0404" />

        <TextView
            android:id="@+id/txtPointBusDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xe Tải Hoang Log"
            android:textColor="#E12C0404"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Li7"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft=" 1dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Li6">

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:text="ID: "
            android:textAlignment="textEnd"
            android:textColor="#E12C0404" />

        <TextView
            android:id="@+id/txtIDBusDetaildialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xe Tải Hoang Log"
            android:textColor="#E12C0404"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Li8"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft=" 1dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Li7">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:text="Chi phí vận chuyển: "
            android:textAlignment="viewStart"
            android:textColor="#EE0B0B"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtChiPhiDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xe Tải Hoang Log"
            android:textColor="#EE0B0B"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btDatXeDialogDetailBus"
        android:layout_width="126dp"
        android:layout_height="49dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/buttom_custom"
        android:text="Đặt xe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.597"
        app:layout_constraintStart_toEndOf="@+id/btDongdialogDetailBus"
        app:layout_constraintTop_toBottomOf="@+id/Li8" />

    <Button
        android:id="@+id/btDongdialogDetailBus"
        android:layout_width="126dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/buttom_custom"
        android:text="Đóng"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Li8" />

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btDongdialogDetailBus"></LinearLayout>

    <TextView
        android:id="@+id/txtloatxe1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txttt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

